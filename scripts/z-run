#!/dev/null




::// dependencies / ...
::// docs / ...
::// watch / ...
::// features / ...
::// testing / ...
::// sources / ...
::// *




&&== env _RUST_CRATE hyper_simple_server
&&== env-path _RUST_SOURCES ./sources
&&== env-path _RUST_TARGET_BASE ./.target
&&== env-path _EXAMPLES ./examples

<<== env / generate
	#! <bash+>
	_host="$( hostname -s )"
	_token="$( uname -a | md5sum -b | cut -f 1 -d ' ' )"
	printf -- '&&== env _HOST_NAME %s\n' "${_host}"
	printf -- '&&== env _HOST_TOKEN %s\n' "${_token}"
	printf -- '&&== env _HOST_ID %s--%s\n' "${_host}" "${_token}"
	printf -- '&&== env-path _RUST_TARGET %s/%s--%s\n' "${_RUST_TARGET_BASE}" "${_host}" "${_token}"
!!




&& _/project-common.z-run
&& _/project-features.z-run
&& _/project-sources.z-run
&& _/project-generators.z-run

&& _/cargo-dependencies.z-run
&& _/cargo-publish.z-run

&& _/tools-cargo.z-run
&& _/tools-watch.z-run

&& _/testing-curl.z-run
&& _/testing-wrk.z-run
&& _/testing-nat.z-run
&& _/testing-tls.z-run

